[Unit]
Description=ShellClaw Telegram Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/shellclaw
EnvironmentFile=%h/shellclaw/.env
ExecStart=/bin/bash -lc 'cd %h/shellclaw && ./agent.sh'
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
